// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum Role {
  OWNER // Proprietário do tenant
  ADMIN // Administrador
  ORGANIZER // Organizador de eventos
  ATHLETE // Atleta/participante (default)
}

enum TenantPlan {
  FREE // Plano gratuito
  PRO // Plano profissional
  ENTERPRISE // Plano corporativo
}

// Tipos para eventos/modalidades/times
enum ModalityType {
  TEAM // Esportes coletivos: futebol, vôlei etc.
  SOLO // Esportes individuais: tênis, corrida, xadrez etc.
}

enum EventStatus {
  DRAFT
  ACTIVE
  FINISHED
  CANCELED
}

enum TeamRole {
  CAPTAIN
  PLAYER
  COACH
}

enum MatchStatus {
  SCHEDULED
  IN_PROGRESS
  FINISHED
  CANCELED
}

// ============================================
// TENANT (Multi-tenant Architecture)
// ============================================

model Tenant {
  id             String   @id @default(cuid())
  name           String
  slug           String   @unique
  domain         String?  @unique // Para white-label (ex: empresa.pegasus.app)
  logoUrl        String?
  primaryColor   String   @default("#1E40AF") // Hex color code
  secondaryColor String   @default("#9333EA") // Hex color code
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Billing
  plan                   TenantPlan @default(FREE)
  stripeCustomerId       String?    @unique
  stripeSubscriptionId   String?
  lemonSqueezyCustomerId String?
  currentPeriodEnd       DateTime?
  trialEndsAt            DateTime?

  // Relations
  users        User[]
  events       Event[]
  sessions     Session[]
  modalities   Modality[]
  teams        Team[]
  teamMembers  TeamMember[]
  matches      Match[]
  matchResults MatchResult[]

  @@index([slug])
  @@index([domain])
  @@map("tenants")
}

// ============================================
// USER & AUTHENTICATION (Auth.js + SSO)
// ============================================

model User {
  id             String    @id @default(cuid())
  tenantId       String
  email          String
  name           String?
  image          String? // NextAuth padrão
  role           Role      @default(ATHLETE)
  isActive       Boolean   @default(true)
  emailVerified  DateTime?
  hashedPassword String? // Opcional (SSO users podem não ter)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  tenant        Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  sessions      Session[]
  accounts      Account[]
  eventsCreated Event[]      @relation("UserEventsCreated")
  teamMembers   TeamMember[]

  @@unique([tenantId, email])
  @@index([tenantId])
  @@index([email])
  @@map("users")
}

// ============================================
// AUTH.JS PRISMA ADAPTER (Session & Account)
// ============================================

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  tenantId     String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tenantId])
  @@index([sessionToken])
  @@map("sessions")
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  tenantId          String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@index([tenantId])
  @@map("accounts")
}

// ============================================
// EVENT (Placeholder para futuras implementações)
// ============================================

model Event {
  id          String      @id @default(cuid())
  tenantId    String
  name        String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  location    String?
  isPublic    Boolean     @default(false)
  status      EventStatus @default(DRAFT)
  bannerUrl   String?
  createdById String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  tenant     Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdBy  User?      @relation("UserEventsCreated", fields: [createdById], references: [id])
  modalities Modality[]
  matches    Match[]

  @@index([tenantId])
  @@map("events")
}

// ============================================
// MODALITY
// ============================================

model Modality {
  id          String       @id @default(cuid())
  tenantId    String
  eventId     String
  name        String
  description String?
  type        ModalityType @default(TEAM)
  maxPlayers  Int?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  // Relations
  tenant  Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  event   Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  teams   Team[]
  matches Match[]

  @@unique([tenantId, eventId, name])
  @@index([tenantId])
  @@index([eventId])
  @@map("modalities")
}

// ============================================
// TEAM & TEAM MEMBER (N-N User <-> Team)
// ============================================

model Team {
  id         String   @id @default(cuid())
  tenantId   String
  modalityId String
  name       String
  logoUrl    String?
  color      String   @default("#1E40AF")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  tenant          Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  modality        Modality     @relation(fields: [modalityId], references: [id], onDelete: Cascade)
  members         TeamMember[]
  matchesAsTeamA  Match[]      @relation("TeamA")
  matchesAsTeamB  Match[]      @relation("TeamB")
  matchesAsWinner Match[]      @relation("Winner")

  @@unique([tenantId, modalityId, name])
  @@index([tenantId])
  @@index([modalityId])
  @@map("teams")
}

model TeamMember {
  id       String   @id @default(cuid())
  tenantId String
  userId   String
  teamId   String
  role     TeamRole @default(PLAYER)
  joinedAt DateTime @default(now())

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId, teamId])
  @@index([tenantId])
  @@map("team_members")
}

// ============================================
// MATCH (Partida)
// ============================================

model Match {
  id          String      @id @default(cuid())
  tenantId    String
  eventId     String
  modalityId  String
  teamAId     String
  teamBId     String
  winnerId    String? // equipe vencedora
  round       Int? // fase ou rodada (ex: 1, 2, semifinal)
  scheduledAt DateTime? // data e hora agendada
  startTime   DateTime?
  endTime     DateTime?
  status      MatchStatus @default(SCHEDULED)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  tenant   Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  event    Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  modality Modality     @relation(fields: [modalityId], references: [id], onDelete: Cascade)
  teamA    Team         @relation("TeamA", fields: [teamAId], references: [id])
  teamB    Team         @relation("TeamB", fields: [teamBId], references: [id])
  winner   Team?        @relation("Winner", fields: [winnerId], references: [id])
  result   MatchResult?

  @@index([tenantId])
  @@index([eventId])
  @@index([modalityId])
  @@index([teamAId])
  @@index([teamBId])
  @@map("matches")
}

// ============================================
// MATCH RESULT (Resultado da Partida)
// ============================================

model MatchResult {
  id         String   @id @default(cuid())
  tenantId   String
  matchId    String   @unique
  teamAScore Int      @default(0)
  teamBScore Int      @default(0)
  extraTime  Boolean  @default(false)
  penalties  Boolean  @default(false)
  notes      String?  @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  match  Match  @relation(fields: [matchId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@map("match_results")
}
